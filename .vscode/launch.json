    "version": "0.2.0",
    "configurations": [
        {
            "name": "xdebug 9001 (browser)",
            "type": "php",
            "request": "launch",
            "port": 9001,
            "stopOnEntry": false,
            "pathMappings": {
                "/var/www/site/": "${workspaceRoot}/",
            }
        },
        {
            "name": "xdebug 9000 (CLI)",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "stopOnEntry": true,
            "pathMappings": {
                "/var/www/site/": "${workspaceRoot}/",
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9001,
            "stopOnEntry": true,
            "pathMappings": {
                "/var/www/site/": "${workspaceRoot}/",
            }
        }
    ]
}