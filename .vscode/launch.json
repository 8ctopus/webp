    "version": "0.2.0",
    "configurations": [
        {
            "name": "xdebug 9001 (browser)",
            "type": "php",
            "request": "launch",
            "port": 9001,
            "stopOnEntry": false,
            "pathMappings": {
                "/var/www/site/": "${workspaceRoot}/",
            }
        },
        {
            "name": "listen CLI",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "stopOnEntry": false
        },
        {
            "name": "run CLI",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "args": [
            ],
            "cwd": "${fileDirname}",
            "port": 9000,
            "stopOnEntry": false
        }
    ]
}